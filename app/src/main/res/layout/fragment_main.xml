<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.main.PlaceholderFragment">

    <TextView
        android:id="@+id/TopicTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/text"
        android:textColor="#320081"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/ImageViewerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TopicTextViewID"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name" />

    <include
        layout="@layout/topic_picker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/rowTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageViewerID"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/text_view_theme"
        android:textColor="#000000"
        android:padding="5dp"
        android:visibility="gone"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/columnTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageViewerID"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/text_view_theme"
        android:textColor="#000000"
        android:padding="5dp"
        android:visibility="gone"
        android:textSize="12sp" />

</RelativeLayout>
